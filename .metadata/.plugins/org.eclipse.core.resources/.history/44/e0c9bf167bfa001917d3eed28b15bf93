package org.faac.ebb.training;

import io.vertx.core.AbstractVerticle;
import io.vertx.core.AsyncResult;
import io.vertx.ext.web.Router;
import io.vertx.ext.web.RoutingContext;

public class UserVerticle extends AbstractVerticle {
	private static String USER_PATH = "/user";

	@Override
	public void start() throws Exception {
	    super.start();
	 
	    Router router = Router.router(vertx);
	    router.get(UserVerticle.USER_PATH + "/create").handler(this::creatreUser);
	 
	    vertx.createHttpServer()
	      .requestHandler(router::accept)
	      .listen(config().getInteger("http.port", 8080));
	}
	
	private void createUser(RoutingContext context, AsyncResult<Void> resultHandler) {
		
	}
}
